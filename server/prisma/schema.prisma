generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id      String    @id @default(cuid())
  name    String
  email   String    @unique
  password  String
  role  Role @default(BUYER)
  Product Product[]
  cartItems CartItem[]
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int
  createdAt   DateTime @default(now())
  seller      User?    @relation(fields: [sellerId], references: [id])
  sellerId    String?
  cartItems CartItem[]
}

enum Role {
  BUYER
  SELLER
  ADMIN
}

model CartItem {
  id  String @id @default(cuid())
  userId  String
  productId String
  quantity  Int
  user User @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}